<% mine = @mine if mine.nil? %>
<div>
  <table class="table-auto w-full">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Rows</th>
        <th>Columns</th>
        <th>Mines</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= mine.name %></td>
        <td><%= mine.email %></td>
        <td><%= mine.rows %></td>
        <td><%= mine.columns %></td>
        <td><%= mine.mines %></td>
      </tr>
    </tbody>
  </table>

  <div class="flex flex-col p-3 mt-20 mx-auto items-center">
      <% @mine.map.each do |row| %>
        <div class="flex flex-row my-1 justify-between gap-2">
          <% row.each do |col| %>
            <button class="btn-light w-10 h-10">
              <%= col %>
            </button>
          <% end %>
        </div>
      <% end %>
</div>

