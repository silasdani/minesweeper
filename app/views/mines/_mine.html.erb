<% mine = @mine if mine.nil? %>
<div>
  <table class="table-auto w-full">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= mine.name %></td>
        <td><%= mine.email %></td>
        <td><%= mine.created_at.strftime("%I:%M %p - %B %d, %Y") %></td>
      </tr>
    </tbody>
  </table>

  <div class="flex flex-col p-3 mt-10 items-center mx-auto max-w-6xl overflow-scroll">
    <div class="golden-border">
      <% @mine.map.each_with_index do |row, i| %>
        <div class="flex flex-row my-1 justify-between gap-2">
          <% row.each_with_index do |col, j| %>
              <button
                class="btn-light w-7 h-7"
                onclick="window.location.href = '/mines/<%= @mine.id %>/reveal?row=<%= i %>&column=<%= j %>'"
              >
                <%= spot_to_emoji(col.to_s) %>
              </button>
          <% end %>
        </div>
      <% end %>
    </div>
</div>

